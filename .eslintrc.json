{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx"],
  "extends": ["plugin:storybook/recommended"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": ["store"],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              }
            ]
          }
        ],
        "@typescript-eslint/no-empty-interface": [
          "error",
          {
            "allowSingleExtends": true
          }
        ],
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": ["error"]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {
        "@typescript-eslint/no-restricted-imports": [
          "error",
          {
            "paths": [
              {
                "name": "react",
                "importNames": ["default"],
                "message": "React should be destructured.",
                "allowTypeImports": false
              },
              {
                "name": "@testing-library/react",
                "importNames": ["render", "screen"],
                "message": "Use `render` and `screen` from the `@qovery/shared/util-tests` package.",
                "allowTypeImports": false
              },
              {
                "name": "@testing-library/user-event",
                "importNames": ["default"],
                "message": "Destructure `userEvent` exposed by the `render` function from the `@qovery/shared/util-tests` package."
              }
            ]
          }
        ],
        "no-restricted-imports": [
          "warn",
          {
            "paths": [
              {
                "name": "@testing-library/react",
                "importNames": ["fireEvent"],
                "message": "Prefer `userEvent` exposed by the `render` function from the `@qovery/shared/util-tests` package."
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    }
  ]
}
